<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Activity.SchoolSettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/childRL"
                android:background="@color/backgroundColor"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/childSetting"
                        android:text="Child Setting"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginStart="16dp"

                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TILNAME"
                        android:layout_below="@id/childSetting"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:boxStrokeColor="@color/TILStroke"
                        app:boxStrokeWidth="1dp"
                        android:background="@color/backgroundColor"
                        app:hintTextColor="@color/textColor"
                        android:textColorHint="@color/textColor"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="Name"
                            android:textSize="16dp"
                            android:id="@+id/childName"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textColor"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_below="@id/childSetting"
                        android:background="@color/backgroundGrey"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </View>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TILAGE"
                        android:layout_below="@id/TILNAME"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColorHint="@color/textColor"
                        app:hintTextColor="@color/textColor"
                        app:boxStrokeColor="@color/TILStroke"
                        app:boxStrokeWidth="1dp"
                        android:background="@color/backgroundColor"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="Age"
                            android:textSize="16dp"
                            android:id="@+id/childAge"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textColor"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TILParentName"
                        android:layout_below="@id/TILAGE"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColorHint="@color/textColor"
                        app:hintTextColor="@color/textColor"
                        app:boxStrokeColor="@color/TILStroke"
                        app:boxStrokeWidth="1dp"
                        android:background="@color/backgroundColor"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="Parent Name"
                            android:textSize="16dp"
                            android:id="@+id/parentName"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textColor"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>





            </RelativeLayout>
            <View
                android:layout_below="@id/childRL"
                android:background="@color/backgroundGrey"

                android:layout_width="match_parent"
                android:layout_height="10dp">

            </View>

            <RelativeLayout
                android:layout_below="@id/childRL"
                android:layout_marginTop="10dp"
                android:background="@color/backgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/schoolsetting"
                    android:text="School Setting"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILschoolName"
                    android:layout_below="@id/schoolsetting"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:boxStrokeColor="@color/TILStroke"
                    android:background="@color/backgroundColor"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/textColor"
                    app:hintTextColor="@color/textColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="School Name"
                        android:textSize="16dp"
                        android:id="@+id/schoolName"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColor"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILaddress"
                    android:layout_below="@id/TILschoolName"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:boxStrokeColor="@color/TILStroke"
                    android:background="@color/backgroundColor"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/textColor"
                    app:hintTextColor="@color/textColor"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="School Address"
                        android:textSize="16dp"
                        android:id="@+id/schoolAddress"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColor"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILclass"
                    android:layout_below="@id/TILaddress"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:boxStrokeColor="@color/TILStroke"
                    app:boxStrokeWidth="1dp"
                    android:background="@color/backgroundColor"
                    android:textColorHint="@color/textColor"
                    app:hintTextColor="@color/textColor"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Class"
                        android:textSize="16dp"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColor"
                        android:id="@+id/classtext"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_below="@id/TILclass"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:boxStrokeColor="@color/TILStroke"
                    app:boxStrokeWidth="1dp"
                    android:background="@color/backgroundColor"
                    android:textColorHint="@color/textColor"
                    app:hintTextColor="@color/textColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Bus Number"
                        android:textSize="16dp"
                        android:id="@+id/busnum"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColor"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>